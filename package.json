{
  "name": "professional-dashboard",
  "version": "1.0.0",
  "description": "Professional dashboard for biomedical scientists",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "jest",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dist": "electron-vite build && electron-builder --mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.professionaldashboard.app",
    "productName": "Professional Dashboard",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/*.md",
      "!node_modules/**/*.map"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] },
        { "target": "dir", "arch": ["arm64", "x64"] }
      ]
    },
    "dmg": {
      "title": "Professional Dashboard",
      "window": { "width": 540, "height": 380 }
    },
    "nativeRebuilder": "sequential"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.76.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.14",
    "@tiptap/extension-character-count": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cheerio": "^0.22.35",
    "@types/leaflet": "^1.9.21",
    "@types/mailparser": "^3.4.6",
    "@types/node-fetch": "^2.6.13",
    "@types/react-router-dom": "^5.3.3",
    "@uiw/react-codemirror": "^4.25.4",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "docx": "^9.5.3",
    "imap": "^0.8.19",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.574.0",
    "mailparser": "^3.9.3",
    "node-fetch": "^3.3.2",
    "openai": "^6.22.0",
    "pdfjs-dist": "^5.4.624",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0"
  }
}
